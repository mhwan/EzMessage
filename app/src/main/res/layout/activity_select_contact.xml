<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.mhwan.easymessage.Activity.SelectContactActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTabbar"
        android:minHeight="?android:attr/actionBarSize"
        app:theme="@style/AppTheme.Toolbar">

        <TextView
            android:id="@+id/toolbar_okay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:padding="13dp"
            android:background="@drawable/selector_item_touch_effect"
            android:text="@string/okay"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/select_listview"
            android:layout_width="match_parent"
            android:divider="#c7c7c7"
            android:headerDividersEnabled="false"
            android:dividerHeight="0.5dp"
            android:layout_height="match_parent">
        </ListView>
        <View
            android:layout_alignParentTop="true"
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </RelativeLayout>
</LinearLayout>
